@model Product
@{
}
<div class="card product-item border-0">
    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
        <img class="img-fluid w-100" src="@Model.MainImage.Url" alt="">
    </div>
    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
        <h6 class="text-truncate mb-3">@Model.Title</h6>
        <div class="d-flex justify-content-center">
            <h6>@Model.Price.ToString("#.##")</h6>
            <h6 class="text-muted ml-2">
                <del>$@((Model.Price + Model.Price * 0.15M).ToString("#.##"))</del>

            </h6>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between bg-light border">
        <a href="/product/@Model.Id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
        <button data-quantity="1" data-id="@Model.Id" class="btn btn-sm text-dark p-0 add-cart"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</button>
    </div>
</div>