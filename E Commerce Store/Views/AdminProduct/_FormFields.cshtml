@{
    string buttonTitle = this.ViewData["ButtonTitle"].ToString();
}
@model Category
<div class="form-group">
    <label for="Title">Title</label>
    <input type="text" id="Title" name="Title" value="@Model.Title" class="form-control">
    <span class="text-danger">@Html.ValidationMessageFor(m => m.Title)</span>
</div>

<div class="form-group">
    <label for="Url">Url</label>
    <textarea id="Url" name="Url" class="form-control">@Model.Url</textarea>
    <span class="text-danger">@Html.ValidationMessageFor(m => m.Url)</span>
</div>
<div class="form-group">
    <label for="Image">Image</label>
    @Html.TextBoxFor(m=>m.Image, new {@class="form-control", type="file", accept=".jpg,.png,.jpeg"})
    <span class="text-danger">@Html.ValidationMessageFor(m => m.Url)</span>

</div>

<button type="submit" class="btn btn-primary">@buttonTitle</button>